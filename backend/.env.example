# Backend Environment Configuration
# Copy to .env and edit before running.

# ── Server ────────────────────────────────────────────
APP_PORT=8080
APP_ENV=development

# ── Database (PostgreSQL) ───────────────────────────
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=event_ticketing
DB_SSLMODE=disable

# ── Auth ──────────────────────────────────────────────
JWT_SECRET=supersecretkey_changeme

# ── CORS ──────────────────────────────────────────────
# Comma-separated allowed origins for the frontend
CORS_ORIGINS=*
